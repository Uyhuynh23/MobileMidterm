<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/redeemImage"
        android:layout_width="81dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/redeemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafe Latte"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#1C2A3A"
        app:layout_constraintStart_toEndOf="@id/redeemImage"
        app:layout_constraintTop_toTopOf="@id/redeemImage"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/redeemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid until 04.07.21"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintStart_toStartOf="@id/redeemTitle"
        app:layout_constraintTop_toBottomOf="@id/redeemTitle" />

    <TextView
        android:id="@+id/BtnRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/darkblue_button"
        android:padding="8dp"
        android:text="1340 pts"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
