<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Background swipe container with delete -->

    <!-- Foreground Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/foregroundCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F8FAFD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="12dp">

            <!-- Coffee Image -->
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_coffee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Coffee Name -->
            <TextView
                android:id="@+id/itemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textColor="#1C2A3A"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/itemImage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/itemPrice"
                android:layout_marginStart="12dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Price -->
            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3.00"
                android:textColor="#1C2A3A"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/itemName" />

            <!-- Options: shot | select | size | ice -->
            <LinearLayout
                android:id="@+id/optionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/itemName"
                app:layout_constraintTop_toBottomOf="@id/itemName"
                app:layout_constraintEnd_toStartOf="@id/itemPrice"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/optionShot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/optionSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iced"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/optionSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/optionIce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Ice"
                    android:textSize="14sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- Quantity -->
            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x 1"
                android:textStyle="bold"
                android:textColor="#1C2A3A"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/itemName"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
